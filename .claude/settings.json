{
  "permissions": {
    "allow": ["Read", "Edit", "Write", "Bash", "Tinty"]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session-start"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/user-prompt-submit-skill-activation"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/stop-build-check"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/stop-commit-reminder"
          }
        ]
      }
    ]
  }
}
