{
  "symlinks-developer": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": ["symlink", "symlinks", "relink"],
      "intentPatterns": [
        "(fix|debug|update).*symlink",
        "symlink.*(broken|missing|error)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": ["tools/symlinks/**/*.py"],
      "contentPatterns": ["from pathlib import Path", "symlink_to"]
    }
  },

  "dotfiles-install": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "promptTriggers": {
      "keywords": ["install", "bootstrap", "setup", "taskfile"],
      "intentPatterns": [
        "(create|update|fix).*install",
        "(macos|wsl|arch).*(setup|install)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "install/*.sh",
        "Taskfile.yml",
        "taskfiles/*.yml"
      ]
    }
  },

  "documentation": {
    "type": "cross-cutting",
    "enforcement": "suggest",
    "priority": "medium",
    "promptTriggers": {
      "keywords": ["docs", "documentation", "readme", "changelog"],
      "intentPatterns": [
        "(write|update|create).*docs",
        "document.*"
      ]
    },
    "fileTriggers": {
      "pathPatterns": ["docs/**/*.md"],
      "contentPatterns": ["^# ", "^## "]
    }
  }
}
