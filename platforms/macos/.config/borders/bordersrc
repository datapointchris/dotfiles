#!/bin/bash
# JankyBorders Configuration
# Theme colors are loaded from themes/current (managed by `theme` CLI)

THEME_FILE="$HOME/.config/borders/themes/current"

if [[ -f "$THEME_FILE" ]]; then
  source "$THEME_FILE"
else
  # Fallback colors if no theme applied
  options=(
    style=round
    width=8.0
    hidpi=on
    active_color=0xffe1e3e4
    inactive_color=0xff494d64
    blacklist="System Settings|System Information|QuickTime Player"
  )
  borders "${options[@]}"
fi
